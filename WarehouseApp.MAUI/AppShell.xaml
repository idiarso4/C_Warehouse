<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WarehouseApp.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:WarehouseApp.MAUI.Views"
    Title="Warehouse Management">

    <!-- Tab Bar -->
    <TabBar>
        <!-- Dashboard Tab -->
        <ShellContent
            Title="Dashboard"
            Icon="home.png"
            Route="dashboard"
            ContentTemplate="{DataTemplate views:DashboardPage}" />

        <!-- Products Tab -->
        <ShellContent
            Title="Products"
            Icon="package.png"
            Route="products"
            ContentTemplate="{DataTemplate views:ProductListPage}" />

        <!-- Stock Tab -->
        <ShellContent
            Title="Stock"
            Icon="inventory.png"
            Route="stock">
            <!-- This will be implemented later -->
        </ShellContent>

        <!-- Reports Tab -->
        <ShellContent
            Title="Reports"
            Icon="chart.png"
            Route="reports">
            <!-- This will be implemented later -->
        </ShellContent>

        <!-- Settings Tab -->
        <ShellContent
            Title="Settings"
            Icon="settings.png"
            Route="settings">
            <!-- This will be implemented later -->
        </ShellContent>
    </TabBar>

</Shell>
