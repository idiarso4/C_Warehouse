<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Warehouse Management Theme Colors -->

    <!-- Primary Brand Colors -->
    <Color x:Key="Primary">#2563EB</Color>          <!-- Blue 600 - Professional blue -->
    <Color x:Key="PrimaryDark">#1D4ED8</Color>      <!-- Blue 700 - Darker blue for dark mode -->
    <Color x:Key="PrimaryLight">#3B82F6</Color>     <!-- Blue 500 - Lighter blue -->
    <Color x:Key="PrimaryLighter">#DBEAFE</Color>   <!-- Blue 100 - Very light blue -->

    <!-- Secondary Colors -->
    <Color x:Key="Secondary">#10B981</Color>        <!-- Emerald 500 - Success green -->
    <Color x:Key="SecondaryDark">#059669</Color>    <!-- Emerald 600 -->
    <Color x:Key="SecondaryLight">#34D399</Color>   <!-- Emerald 400 -->
    <Color x:Key="SecondaryLighter">#D1FAE5</Color> <!-- Emerald 100 -->

    <!-- Accent Colors -->
    <Color x:Key="Accent">#F59E0B</Color>           <!-- Amber 500 - Warning/attention -->
    <Color x:Key="AccentDark">#D97706</Color>       <!-- Amber 600 -->
    <Color x:Key="AccentLight">#FBBF24</Color>      <!-- Amber 400 -->
    <Color x:Key="AccentLighter">#FEF3C7</Color>    <!-- Amber 100 -->

    <!-- Status Colors -->
    <Color x:Key="Success">#10B981</Color>          <!-- Emerald 500 -->
    <Color x:Key="Warning">#F59E0B</Color>          <!-- Amber 500 -->
    <Color x:Key="Error">#EF4444</Color>            <!-- Red 500 -->
    <Color x:Key="Info">#3B82F6</Color>             <!-- Blue 500 -->

    <!-- Status Light Colors -->
    <Color x:Key="SuccessLight">#D1FAE5</Color>     <!-- Emerald 100 -->
    <Color x:Key="WarningLight">#FEF3C7</Color>     <!-- Amber 100 -->
    <Color x:Key="ErrorLight">#FEE2E2</Color>       <!-- Red 100 -->
    <Color x:Key="InfoLight">#DBEAFE</Color>        <!-- Blue 100 -->

    <!-- Neutral Colors -->
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>
    <Color x:Key="Transparent">Transparent</Color>

    <!-- Gray Scale -->
    <Color x:Key="Gray50">#F9FAFB</Color>
    <Color x:Key="Gray100">#F3F4F6</Color>
    <Color x:Key="Gray200">#E5E7EB</Color>
    <Color x:Key="Gray300">#D1D5DB</Color>
    <Color x:Key="Gray400">#9CA3AF</Color>
    <Color x:Key="Gray500">#6B7280</Color>
    <Color x:Key="Gray600">#4B5563</Color>
    <Color x:Key="Gray700">#374151</Color>
    <Color x:Key="Gray800">#1F2937</Color>
    <Color x:Key="Gray900">#111827</Color>
    <Color x:Key="Gray950">#030712</Color>


    <!-- Semantic UI Colors -->
    <Color x:Key="Surface">#FFFFFF</Color>              <!-- Background surface -->
    <Color x:Key="SurfaceVariant">#F9FAFB</Color>       <!-- Alternative surface -->
    <Color x:Key="OnSurface">#111827</Color>            <!-- Text on surface -->
    <Color x:Key="OnSurfaceVariant">#6B7280</Color>     <!-- Secondary text -->

    <Color x:Key="Background">#F9FAFB</Color>           <!-- App background -->
    <Color x:Key="OnBackground">#111827</Color>         <!-- Text on background -->

    <Color x:Key="Card">#FFFFFF</Color>                 <!-- Card background -->
    <Color x:Key="CardBorder">#E5E7EB</Color>           <!-- Card border -->
    <Color x:Key="Divider">#E5E7EB</Color>              <!-- Divider lines -->

    <!-- Interactive Colors -->
    <Color x:Key="ButtonPrimary">#2563EB</Color>        <!-- Primary button -->
    <Color x:Key="ButtonSecondary">#F3F4F6</Color>      <!-- Secondary button -->
    <Color x:Key="ButtonDanger">#EF4444</Color>         <!-- Danger button -->
    <Color x:Key="ButtonSuccess">#10B981</Color>        <!-- Success button -->

    <!-- Text Colors -->
    <Color x:Key="TextPrimary">#111827</Color>          <!-- Primary text -->
    <Color x:Key="TextSecondary">#6B7280</Color>        <!-- Secondary text -->
    <Color x:Key="TextTertiary">#9CA3AF</Color>         <!-- Tertiary text -->
    <Color x:Key="TextDisabled">#D1D5DB</Color>         <!-- Disabled text -->
    <Color x:Key="TextOnPrimary">#FFFFFF</Color>        <!-- Text on primary color -->
    <Color x:Key="TextOnSecondary">#FFFFFF</Color>      <!-- Text on secondary color -->

    <!-- Stock Status Colors -->
    <Color x:Key="StockHigh">#10B981</Color>            <!-- High stock - green -->
    <Color x:Key="StockMedium">#F59E0B</Color>          <!-- Medium stock - amber -->
    <Color x:Key="StockLow">#EF4444</Color>             <!-- Low stock - red -->
    <Color x:Key="StockOut">#6B7280</Color>             <!-- Out of stock - gray -->

    <!-- Movement Type Colors -->
    <Color x:Key="StockIn">#10B981</Color>              <!-- Stock in - green -->
    <Color x:Key="StockOutMovement">#EF4444</Color>     <!-- Stock out movement - red -->
    <Color x:Key="Transfer">#3B82F6</Color>             <!-- Transfer - blue -->
    <Color x:Key="Adjustment">#8B5CF6</Color>           <!-- Adjustment - purple -->

    <!-- Solid Color Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDark}"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLight}"/>
    <SolidColorBrush x:Key="PrimaryLighterBrush" Color="{StaticResource PrimaryLighter}"/>

    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="SecondaryDarkBrush" Color="{StaticResource SecondaryDark}"/>
    <SolidColorBrush x:Key="SecondaryLightBrush" Color="{StaticResource SecondaryLight}"/>
    <SolidColorBrush x:Key="SecondaryLighterBrush" Color="{StaticResource SecondaryLighter}"/>

    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource Accent}"/>
    <SolidColorBrush x:Key="AccentDarkBrush" Color="{StaticResource AccentDark}"/>
    <SolidColorBrush x:Key="AccentLightBrush" Color="{StaticResource AccentLight}"/>
    <SolidColorBrush x:Key="AccentLighterBrush" Color="{StaticResource AccentLighter}"/>

    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource Success}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource Warning}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource Error}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource Info}"/>

    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource Surface}"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource Background}"/>
    <SolidColorBrush x:Key="CardBrush" Color="{StaticResource Card}"/>

    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>
    <SolidColorBrush x:Key="TransparentBrush" Color="{StaticResource Transparent}"/>

    <!-- Gray Brushes -->
    <SolidColorBrush x:Key="Gray50Brush" Color="{StaticResource Gray50}"/>
    <SolidColorBrush x:Key="Gray100Brush" Color="{StaticResource Gray100}"/>
    <SolidColorBrush x:Key="Gray200Brush" Color="{StaticResource Gray200}"/>
    <SolidColorBrush x:Key="Gray300Brush" Color="{StaticResource Gray300}"/>
    <SolidColorBrush x:Key="Gray400Brush" Color="{StaticResource Gray400}"/>
    <SolidColorBrush x:Key="Gray500Brush" Color="{StaticResource Gray500}"/>
    <SolidColorBrush x:Key="Gray600Brush" Color="{StaticResource Gray600}"/>
    <SolidColorBrush x:Key="Gray700Brush" Color="{StaticResource Gray700}"/>
    <SolidColorBrush x:Key="Gray800Brush" Color="{StaticResource Gray800}"/>
    <SolidColorBrush x:Key="Gray900Brush" Color="{StaticResource Gray900}"/>
    <SolidColorBrush x:Key="Gray950Brush" Color="{StaticResource Gray950}"/>

</ResourceDictionary>