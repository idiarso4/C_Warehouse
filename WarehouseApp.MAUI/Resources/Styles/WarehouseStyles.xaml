<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Warehouse Management Custom Styles -->

    <!-- Typography Styles -->
    <Style x:Key="HeadingLarge" TargetType="Label">
        <Setter Property="FontSize" Value="32" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="LineBreakMode" Value="WordWrap" />
    </Style>

    <Style x:Key="HeadingMedium" TargetType="Label">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="LineBreakMode" Value="WordWrap" />
    </Style>

    <Style x:Key="HeadingSmall" TargetType="Label">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="LineBreakMode" Value="WordWrap" />
    </Style>

    <Style x:Key="BodyLarge" TargetType="Label">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="LineBreakMode" Value="WordWrap" />
    </Style>

    <Style x:Key="BodyMedium" TargetType="Label">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="LineBreakMode" Value="WordWrap" />
    </Style>

    <Style x:Key="BodySmall" TargetType="Label">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="TextColor" Value="{StaticResource TextSecondary}" />
        <Setter Property="LineBreakMode" Value="WordWrap" />
    </Style>

    <Style x:Key="Caption" TargetType="Label">
        <Setter Property="FontSize" Value="10" />
        <Setter Property="TextColor" Value="{StaticResource TextTertiary}" />
        <Setter Property="LineBreakMode" Value="WordWrap" />
    </Style>

    <!-- Button Styles -->
    <Style x:Key="ButtonPrimary" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource Primary}" />
        <Setter Property="TextColor" Value="{StaticResource TextOnPrimary}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="16,12" />
        <Setter Property="MinimumHeightRequest" Value="48" />
        <Setter Property="Shadow">
            <Shadow Brush="{StaticResource Primary}" Opacity="0.3" Radius="8" Offset="0,2" />
        </Setter>
    </Style>

    <Style x:Key="ButtonSecondary" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource ButtonSecondary}" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="16,12" />
        <Setter Property="MinimumHeightRequest" Value="48" />
        <Setter Property="BorderColor" Value="{StaticResource CardBorder}" />
        <Setter Property="BorderWidth" Value="1" />
    </Style>

    <Style x:Key="ButtonDanger" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource Error}" />
        <Setter Property="TextColor" Value="{StaticResource TextOnPrimary}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="16,12" />
        <Setter Property="MinimumHeightRequest" Value="48" />
    </Style>

    <Style x:Key="ButtonSuccess" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource Success}" />
        <Setter Property="TextColor" Value="{StaticResource TextOnSecondary}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="16,12" />
        <Setter Property="MinimumHeightRequest" Value="48" />
    </Style>

    <Style x:Key="ButtonSmall" TargetType="Button">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="Padding" Value="12,8" />
        <Setter Property="MinimumHeightRequest" Value="36" />
    </Style>

    <!-- Card Styles -->
    <Style x:Key="Card" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource Card}" />
        <Setter Property="BorderColor" Value="{StaticResource CardBorder}" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="HasShadow" Value="True" />
        <Setter Property="Shadow">
            <Shadow Brush="{StaticResource Gray300}" Opacity="0.2" Radius="8" Offset="0,2" />
        </Setter>
    </Style>

    <Style x:Key="CardElevated" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource Card}" />
        <Setter Property="BorderColor" Value="{StaticResource CardBorder}" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="HasShadow" Value="True" />
        <Setter Property="Shadow">
            <Shadow Brush="{StaticResource Gray400}" Opacity="0.3" Radius="12" Offset="0,4" />
        </Setter>
    </Style>

    <Style x:Key="CardFlat" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource Card}" />
        <Setter Property="BorderColor" Value="{StaticResource CardBorder}" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="HasShadow" Value="False" />
    </Style>

    <!-- Status Badge Styles -->
    <Style x:Key="BadgeSuccess" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource SuccessLight}" />
        <Setter Property="BorderColor" Value="{StaticResource Success}" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="MinimumHeightRequest" Value="24" />
    </Style>

    <Style x:Key="BadgeWarning" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource WarningLight}" />
        <Setter Property="BorderColor" Value="{StaticResource Warning}" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="MinimumHeightRequest" Value="24" />
    </Style>

    <Style x:Key="BadgeError" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource ErrorLight}" />
        <Setter Property="BorderColor" Value="{StaticResource Error}" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="MinimumHeightRequest" Value="24" />
    </Style>

    <Style x:Key="BadgeInfo" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource InfoLight}" />
        <Setter Property="BorderColor" Value="{StaticResource Info}" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="MinimumHeightRequest" Value="24" />
    </Style>

    <!-- Input Field Styles -->
    <Style x:Key="InputField" TargetType="Entry">
        <Setter Property="BackgroundColor" Value="{StaticResource Surface}" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="PlaceholderColor" Value="{StaticResource TextTertiary}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Margin" Value="12,6" />
        <Setter Property="MinimumHeightRequest" Value="48" />
    </Style>

    <Style x:Key="SearchField" TargetType="SearchBar">
        <Setter Property="BackgroundColor" Value="{StaticResource Surface}" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="PlaceholderColor" Value="{StaticResource TextTertiary}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="MinimumHeightRequest" Value="48" />
    </Style>

    <!-- Warehouse Specific Styles -->
    <Style x:Key="StockCard" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource Card}" />
        <Setter Property="BorderColor" Value="{StaticResource CardBorder}" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="HasShadow" Value="True" />
        <Setter Property="Margin" Value="8" />
        <Setter Property="Shadow">
            <Shadow Brush="{StaticResource Gray300}" Opacity="0.2" Radius="6" Offset="0,2" />
        </Setter>
    </Style>

    <Style x:Key="ProductCard" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource Card}" />
        <Setter Property="BorderColor" Value="{StaticResource CardBorder}" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="12" />
        <Setter Property="HasShadow" Value="True" />
        <Setter Property="Margin" Value="4" />
        <Setter Property="Shadow">
            <Shadow Brush="{StaticResource Gray300}" Opacity="0.15" Radius="4" Offset="0,1" />
        </Setter>
    </Style>

    <Style x:Key="DashboardCard" TargetType="Frame">
        <Setter Property="CornerRadius" Value="16" />
        <Setter Property="Padding" Value="20" />
        <Setter Property="HasShadow" Value="True" />
        <Setter Property="Margin" Value="8" />
        <Setter Property="MinimumHeightRequest" Value="120" />
        <Setter Property="Shadow">
            <Shadow Brush="{StaticResource Gray400}" Opacity="0.25" Radius="10" Offset="0,3" />
        </Setter>
    </Style>

    <!-- Stock Status Styles -->
    <Style x:Key="StockHigh" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource StockHigh}" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

    <Style x:Key="StockMedium" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource StockMedium}" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

    <Style x:Key="StockLow" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource StockLow}" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

    <Style x:Key="StockOut" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource StockOut}" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

    <!-- Loading Overlay Style -->
    <Style x:Key="LoadingOverlay" TargetType="Grid">
        <Setter Property="BackgroundColor" Value="#80000000" />
        <Setter Property="IsVisible" Value="False" />
    </Style>

    <Style x:Key="LoadingCard" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource Card}" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="24" />
        <Setter Property="HasShadow" Value="True" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="Shadow">
            <Shadow Brush="{StaticResource Gray500}" Opacity="0.3" Radius="12" Offset="0,4" />
        </Setter>
    </Style>

    <!-- Divider Styles -->
    <Style x:Key="Divider" TargetType="BoxView">
        <Setter Property="BackgroundColor" Value="{StaticResource Divider}" />
        <Setter Property="HeightRequest" Value="1" />
        <Setter Property="HorizontalOptions" Value="FillAndExpand" />
    </Style>

    <Style x:Key="VerticalDivider" TargetType="BoxView">
        <Setter Property="BackgroundColor" Value="{StaticResource Divider}" />
        <Setter Property="WidthRequest" Value="1" />
        <Setter Property="VerticalOptions" Value="FillAndExpand" />
    </Style>

</ResourceDictionary>